<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="homeOneRowModel" type="com.toylysapplication.app.modules.homeone.data.model.HomeOneRowModel"/>
    </data>
    <LinearLayout android:id="@+id/linearAtas"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:orientation="horizontal">
        <LinearLayout android:gravity="center_horizontal"
            android:id="@+id/linearTopup"
            android:layout_height="wrap_content"
            android:layout_weight="0.3" android:layout_width="0dp" android:orientation="vertical">
            <ImageButton
                android:background="@drawable/rectangle_bg_purple_600_33_radius_10"
                android:id="@+id/btnRotatingarrow"
                android:layout_gravity="start"
                android:layout_height="@dimen/_68pxh"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_width="@dimen/_68pxh"
                android:paddingHorizontal="@dimen/_14pxh"
                android:paddingVertical="@dimen/_14pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_rotatingarrow" tools:ignore="ContentDescription"/>
            <TextView android:ellipsize="end" android:id="@+id/txtTopUp"
                android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_13pxh"
                android:layout_marginStart="@dimen/_13pxh"
                android:layout_marginTop="@dimen/_5pxv"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@{homeOneRowModel.txtTopUp}"
                style="@style/txtRobotomedium14" tools:text="@string/lbl_top_up"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_horizontal"
            android:id="@+id/linearTransfer"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_1pxv"
            android:layout_weight="0.23" android:layout_width="0dp" android:orientation="vertical">
            <ImageButton
                android:background="@drawable/rectangle_bg_amber_700_33_radius_10"
                android:id="@+id/btnOffer"
                android:layout_gravity="start"
                android:layout_height="@dimen/_68pxh"
                android:layout_width="@dimen/_68pxh"
                android:paddingHorizontal="@dimen/_15pxh"
                android:paddingVertical="@dimen/_15pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_offer" tools:ignore="ContentDescription"/>
            <TextView android:ellipsize="end"
                android:gravity="center_horizontal"
                android:id="@+id/txtTranfer"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_11pxh"
                android:layout_marginStart="@dimen/_11pxh"
                android:layout_marginTop="@dimen/_3pxv"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{homeOneRowModel.txtTranfer}"
                style="@style/txtRobotomedium14" tools:text="@string/lbl_tranfer"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_horizontal"
            android:id="@+id/linearInternet"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20pxh"
            android:layout_weight="0.23" android:layout_width="0dp" android:orientation="vertical">
            <ImageButton
                android:background="@drawable/rectangle_bg_green_a400_33_radius_10"
                android:id="@+id/btnGlobe"
                android:layout_gravity="start"
                android:layout_height="@dimen/_68pxh"
                android:layout_width="@dimen/_68pxh"
                android:paddingHorizontal="@dimen/_20pxh"
                android:paddingVertical="@dimen/_20pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_globe" tools:ignore="ContentDescription"/>
            <TextView android:ellipsize="end"
                android:gravity="center_horizontal"
                android:id="@+id/txtInternet"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_4pxv"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{homeOneRowModel.txtInternet}"
                style="@style/txtRobotomedium14" tools:text="@string/lbl_internet"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_horizontal"
            android:id="@+id/linearWallet"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_19pxh"
            android:layout_weight="0.23" android:layout_width="0dp" android:orientation="vertical">
            <ImageButton
                android:background="@drawable/rectangle_bg_red_500_33_radius_10"
                android:id="@+id/btnWalletOne"
                android:layout_gravity="start"
                android:layout_height="@dimen/_68pxh"
                android:layout_width="@dimen/_68pxh"
                android:paddingHorizontal="@dimen/_20pxh"
                android:paddingVertical="@dimen/_20pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_wallet1" tools:ignore="ContentDescription"/>
            <TextView android:ellipsize="end"
                android:gravity="center_horizontal"
                android:id="@+id/txtWallet"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_14pxh"
                android:layout_marginStart="@dimen/_15pxh"
                android:layout_marginTop="@dimen/_4pxv"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{homeOneRowModel.txtWallet}"
                style="@style/txtRobotomedium14" tools:text="@string/lbl_wallet"/>
        </LinearLayout>
    </LinearLayout>
</layout>
